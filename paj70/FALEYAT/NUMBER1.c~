#include <io.h>

#include <delay.h>
unsigned char i=0,j=10;

void main(void)
{
DDRD=0xaFF;
while (1)
    {
    // Please write your application code here
    if(PINB.0==1){
    PORTD=i;
    delay_ms(500);
    i++;
    if(i==10){
    i=0;
    }
    }   
    else
    { 
    PORTD=j;
    delay_ms(500);
    j--;
    if(j==0)j=9 ;
    }
    }
}
